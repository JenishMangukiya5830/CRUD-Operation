<div class="success">
  <% if(flash.success != '') { %>
    <div class="alert alert-success text-center success">
        <%= flash.success %>
    </div>
<% } %>
</div>

<div class="error">
  <% if(flash.error != '') { %>
    <div class="alert alert-danger text-center error">
        <%= flash.error %>
    </div>
<% } %>
</div>

